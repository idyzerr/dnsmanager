<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dnsapk"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_icon"
        android:label="@string/titleApp"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.dns.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.dns.Database"
            android:label="@string/title_activity_database"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.dns.DatabaseText"
            android:label="@string/title_activity_database_text"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.dns.Logs"
            android:label="@string/title_activity_logs"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.dns.TittleActivity"
            android:label="@string/titleApp"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.dns.HelpActivity"
            android:label="@string/title_activity_help"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.dns.Config"
            android:label="@string/title_activity_config"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.dns.ConfigText"
            android:label="@string/title_activity_config_text"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.dns.CheckConnection"
            android:label="@string/title_activity_check_connection" >
        </activity>
    </application>

</manifest>
